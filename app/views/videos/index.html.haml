- @categories.each do |cat|
  %article.video_category
    %header
      %h3
        = link_to cat.name, home_path
    .videos.row
      - @videos.select{ |video| video.category_id == cat.id }.each do |video|
        .video.col-sm-2
          = link_to video_path(video), nil do
            %img(src="#{video.small_cover_url}")

